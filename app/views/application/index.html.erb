<div class="container">
  <div class="main-content">
    <h1>Welcome!</h1>
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <%=raw content_tag :div, msg, id:"flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
    <!-- Add a button to allow signing in -->
    <%= button_to 'Sign in with SAML SSO', action: :saml_login %> 
  </div>
  <div class="google-signin">
    <%= google_sign_in_button proceed_to: create_login_url do %>
    Sign in with my <%= image_tag('google_logo.png', alt: 'Google') %> account
  </div>
  <% end %>
</div> 